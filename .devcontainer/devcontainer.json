{
	"name": "Rust",
	"remoteUser": "vscode",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers-extra/features/protoc:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {}
	},
	"runArgs": [
		"--env-file",
		".devcontainer/.env"
	],
	"containerEnv": {
		"EDITOR": "code --wait"
	},
	"postStartCommand": "npm i -g opencode-ai",
	"customizations": {
		"vscode": {
			"extensions": [
				"wayou.vscode-todo-highlight",
				"github.copilot",
				"github.copilot-chat",
				"ms-ceintl.vscode-language-pack-ko",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"vadimcn.vscode-lldb"
			],
			"settings": {
				"todohighlight.keywords": [
					{
						"text": "NOTE",
						"color": "#FF00FF",
						"backgroundColor": "transparent",
						"overviewRulerColor": "rgba(255, 0, 255, 0.7)",
						"fontWeight": "bold",
						"fontStyle": "italic"
					},
					{
						"text": "FIXME",
						"color": "#FF0000",
						"backgroundColor": "transparent",
						"overviewRulerColor": "rgba(255, 0, 0, 0.7)",
						"fontWeight": "bold",
						"fontStyle": "italic"
					},
					{
						"text": "[NEEDS CLARIFICATION]",
						"color": "#FF4500",
						"backgroundColor": "transparent",
						"overviewRulerColor": "rgba(255, 69, 0, 0.7)",
						"fontWeight": "bold",
						"fontStyle": "italic"
					}
				],
			}
		}
	},
	"mounts": [
		{
			"source": "home-${devcontainerId}",
			"target": "/home/vscode",
			"type": "volume"
		},
		{
			"source": "${localEnv:HOME}/.kube",
			"target": "/home/vscode/.kube",
			"type": "bind"
		}
	]
}